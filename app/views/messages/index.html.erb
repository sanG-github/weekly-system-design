<% content_for :title, "Slack Channel - #{@channel}" %>
<% content_for :head do %>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background-color: #1a1d21;
      color: #d1d2d3;
      overflow: hidden;
    }

    .channel-container {
      display: flex;
      height: 100vh;
      max-width: 1600px;
      margin: 0 auto;
      box-shadow: 0 0 40px rgba(0, 0, 0, 0.3);
    }

    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #1d1f23 0%, #1a1c20 100%);
      border-right: 1px solid rgba(255, 255, 255, 0.08);
      padding: 24px 16px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 {
      margin: 0 0 24px 0;
      font-size: 20px;
      font-weight: 700;
      color: #ffffff;
      letter-spacing: -0.3px;
      padding-left: 8px;
    }

    .channel-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .channel-item {
      padding: 10px 12px;
      margin-bottom: 2px;
      border-radius: 6px;
      cursor: pointer;
      color: #9ca3af;
      transition: all 0.2s ease;
      font-size: 15px;
      font-weight: 500;
      position: relative;
      display: flex;
      align-items: center;
    }

    .channel-item::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 3px;
      height: 0;
      background: #4a9eff;
      border-radius: 0 2px 2px 0;
      transition: height 0.2s ease;
    }

    .channel-item:hover {
      background-color: rgba(255, 255, 255, 0.06);
      color: #ffffff;
    }

    .channel-item.active {
      background-color: rgba(74, 158, 255, 0.15);
      color: #4a9eff;
      font-weight: 600;
    }

    .channel-item.active::before {
      height: 20px;
    }

    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      background-color: #1a1d21;
      position: relative;
    }

    .channel-header {
      padding: 18px 24px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      background: linear-gradient(180deg, #1d1f23 0%, #1a1c20 100%);
      backdrop-filter: blur(10px);
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .channel-header h1 {
      margin: 0;
      font-size: 19px;
      font-weight: 700;
      color: #ffffff;
      letter-spacing: -0.3px;
    }

    .messages-container {
      flex: 1;
      overflow-y: auto;
      overflow-x: hidden;
      padding: 24px;
      display: flex;
      flex-direction: column;
      scroll-behavior: smooth;
    }

    .messages-container::-webkit-scrollbar {
      width: 8px;
    }

    .messages-container::-webkit-scrollbar-track {
      background: transparent;
    }

    .messages-container::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 4px;
    }

    .messages-container::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.15);
    }

    .message {
      margin-bottom: 20px;
      padding: 4px 0;
      display: flex;
      align-items: flex-start;
      transition: opacity 0.3s ease;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .message-avatar {
      width: 40px;
      height: 40px;
      border-radius: 6px;
      margin-right: 14px;
      flex-shrink: 0;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      object-fit: cover;
      background-color: #667eea;
    }

    .message-content {
      flex: 1;
      min-width: 0;
    }

    .message-header {
      display: flex;
      align-items: baseline;
      margin-bottom: 6px;
      gap: 8px;
    }

    .message-author {
      font-weight: 700;
      color: #ffffff;
      font-size: 16px;
      letter-spacing: -0.2px;
    }

    .message-time {
      font-size: 13px;
      color: #71767a;
      font-weight: 400;
    }

    .message-text {
      color: #d1d2d3;
      line-height: 1.6;
      font-size: 15px;
      word-wrap: break-word;
      white-space: pre-wrap;
    }

    .loading-indicator {
      text-align: center;
      padding: 20px 24px;
      color: #71767a;
      font-size: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      position: sticky;
      top: 0;
      z-index: 5;
      background: linear-gradient(180deg, rgba(26, 29, 33, 0.95) 0%, rgba(26, 29, 33, 0.8) 100%);
      backdrop-filter: blur(8px);
      margin-bottom: 8px;
    }

    .loading-indicator.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .loading-button {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 20px;
      background: rgba(74, 158, 255, 0.1);
      border: 1px solid rgba(74, 158, 255, 0.2);
      border-radius: 8px;
      color: #4a9eff;
      font-weight: 500;
      font-size: 14px;
      transition: all 0.2s ease;
    }

    .loading-button:hover {
      background: rgba(74, 158, 255, 0.15);
      border-color: rgba(74, 158, 255, 0.3);
    }

    .loading-spinner {
      display: inline-block;
      width: 18px;
      height: 18px;
      border: 2.5px solid rgba(74, 158, 255, 0.2);
      border-top-color: #4a9eff;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .loading-dots {
      display: inline-flex;
      gap: 4px;
    }

    .loading-dots span {
      width: 6px;
      height: 6px;
      background: #4a9eff;
      border-radius: 50%;
      animation: pulse 1.4s ease-in-out infinite;
    }

    .loading-dots span:nth-child(2) {
      animation-delay: 0.2s;
    }

    .loading-dots span:nth-child(3) {
      animation-delay: 0.4s;
    }

    @keyframes pulse {
      0%, 80%, 100% {
        opacity: 0.3;
        transform: scale(0.8);
      }
      40% {
        opacity: 1;
        transform: scale(1);
      }
    }

    .log-panel {
      position: fixed;
      bottom: 0;
      right: 0;
      width: 420px;
      max-height: 320px;
      background: linear-gradient(180deg, #0d1117 0%, #0a0d11 100%);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      border-left: 1px solid rgba(255, 255, 255, 0.1);
      overflow-y: auto;
      font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
      font-size: 11px;
      padding: 16px;
      z-index: 1000;
      box-shadow: -4px -4px 20px rgba(0, 0, 0, 0.3);
      border-radius: 8px 0 0 0;
    }

    .log-panel h3 {
      margin: 0 0 12px 0;
      font-size: 13px;
      font-weight: 600;
      color: #ffffff;
      letter-spacing: 0.3px;
    }

    .log-entry {
      margin-bottom: 10px;
      padding: 10px;
      background-color: rgba(22, 27, 34, 0.8);
      border-left: 3px solid #30363d;
      border-radius: 4px;
      transition: all 0.2s ease;
    }

    .log-entry:hover {
      background-color: rgba(22, 27, 34, 1);
    }

    .log-entry.request {
      border-left-color: #58a6ff;
    }

    .log-entry.response {
      border-left-color: #3fb950;
    }

    .log-entry.error {
      border-left-color: #f85149;
    }

    .log-timestamp {
      color: #8b949e;
      font-size: 10px;
      font-weight: 500;
      margin-bottom: 4px;
    }

    .log-message {
      color: #c9d1d9;
      margin-top: 6px;
      white-space: pre-wrap;
      font-size: 10px;
      line-height: 1.5;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #71767a;
      font-size: 15px;
    }

    /* Responsive Design for Mobile */
    @media (max-width: 768px) {
      body {
        overflow: auto;
      }

      .channel-container {
        flex-direction: column;
        height: 100vh;
        max-width: 100%;
      }

      .sidebar {
        width: 100%;
        padding: 16px 12px;
        border-right: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        max-height: 200px;
        overflow-y: auto;
      }

      .sidebar h2 {
        font-size: 18px;
        margin-bottom: 16px;
        padding-left: 4px;
      }

      .channel-list {
        display: flex;
        flex-direction: row;
        overflow-x: auto;
        gap: 8px;
        padding-bottom: 4px;
      }

      .channel-list::-webkit-scrollbar {
        height: 4px;
      }

      .channel-list::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
      }

      .channel-item {
        padding: 8px 16px;
        margin-bottom: 0;
        white-space: nowrap;
        font-size: 14px;
        min-width: fit-content;
      }

      .channel-item::before {
        display: none;
      }

      .channel-item.active {
        background-color: rgba(74, 158, 255, 0.2);
        border-bottom: 2px solid #4a9eff;
      }

      .main-content {
        flex: 1;
        min-height: 0;
      }

      .channel-header {
        padding: 14px 16px;
      }

      .channel-header h1 {
        font-size: 17px;
      }

      .messages-container {
        padding: 16px 12px;
      }

      .message {
        margin-bottom: 16px;
        padding: 2px 0;
      }

      .message-avatar {
        width: 36px;
        height: 36px;
        margin-right: 10px;
      }

      .message-author {
        font-size: 14px;
      }

      .message-time {
        font-size: 11px;
      }

      .message-text {
        font-size: 14px;
        line-height: 1.5;
      }

      .loading-indicator {
        padding: 16px 12px;
      }

      .loading-button {
        padding: 8px 16px;
        font-size: 13px;
      }

      .loading-spinner {
        width: 16px;
        height: 16px;
      }
    }

    @media (max-width: 480px) {
      .sidebar {
        padding: 12px 8px;
        max-height: 180px;
      }

      .sidebar h2 {
        font-size: 16px;
        margin-bottom: 12px;
      }

      .channel-item {
        padding: 6px 12px;
        font-size: 13px;
      }

      .channel-header {
        padding: 12px 16px;
      }

      .channel-header h1 {
        font-size: 16px;
      }

      .messages-container {
        padding: 12px 8px;
      }

      .message-avatar {
        width: 32px;
        height: 32px;
        margin-right: 8px;
      }

      .message-author {
        font-size: 13px;
      }

      .message-time {
        font-size: 10px;
      }

      .message-text {
        font-size: 13px;
      }

      .loading-button {
        padding: 6px 12px;
        font-size: 12px;
      }
    }

    /* Tablet adjustments */
    @media (min-width: 769px) and (max-width: 1024px) {
      .sidebar {
        width: 220px;
        padding: 20px 12px;
      }

      .messages-container {
        padding: 20px;
      }
    }
  </style>
<% end %>

<div 
  class="channel-container"
  data-controller="infinite-scroll"
  data-infinite-scroll-channel-value="<%= @channel %>"
  data-infinite-scroll-url-value="/messages"
>
  <div class="sidebar">
    <h2>Channels</h2>
    <ul class="channel-list">
      <li 
        class="channel-item <%= 'active' if @channel == 'general' %>" 
        data-channel="general"
        data-action="click->infinite-scroll#switchChannel"
      >
        # general
      </li>
      <li 
        class="channel-item <%= 'active' if @channel == 'random' %>" 
        data-channel="random"
        data-action="click->infinite-scroll#switchChannel"
      >
        # random
      </li>
      <li 
        class="channel-item <%= 'active' if @channel == 'engineering' %>" 
        data-channel="engineering"
        data-action="click->infinite-scroll#switchChannel"
      >
        # engineering
      </li>
      <li 
        class="channel-item <%= 'active' if @channel == 'design' %>" 
        data-channel="design"
        data-action="click->infinite-scroll#switchChannel"
      >
        # design
      </li>
    </ul>
  </div>

  <div class="main-content">
    <div class="channel-header">
      <h1># <%= @channel %></h1>
    </div>

    <div 
      class="messages-container"
    >
      <div 
        class="loading-indicator" 
        data-infinite-scroll-target="loading"
      >
        <div class="loading-button">
          <span class="loading-spinner"></span>
          <span>Loading older messages</span>
          <div class="loading-dots">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
      </div>
      <div data-infinite-scroll-target="messages">
        <!-- Messages will be loaded here -->
      </div>
    </div>
  </div>
</div>
